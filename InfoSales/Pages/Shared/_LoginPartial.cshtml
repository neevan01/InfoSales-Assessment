@using Microsoft.AspNetCore.Http;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<ul class="navbar-nav">
    <li class="nav-item" style="margin-top: 5%;">
        @* Display the username *@
        <a class="nav-link text-dark">@HttpContextAccessor.HttpContext.Session.GetString("Username")</a>
    </li>
    <li class="nav-item" style="margin-top: 7%;">
        @* Logout button *@
        <form method="post" asp-page-handler="Logout">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-sm btn-link no-a-decoration" onclick="return confirm(&quot;Are you sure to Logout?&quot;);">
                <i class="fa-solid fa-right-from-bracket fa-2xl"></i>
            </button>
        </form>
    </li>
    @* Profile pic *@
    <img class="profile-pic m-2" src="~/N.png" />
</ul>